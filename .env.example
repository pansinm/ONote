# ONote 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# ================================
# 应用配置
# ================================

# 应用名称
NODE_ENV=development

# 日志级别 (debug, info, warn, error)
LOG_LEVEL=info

# 应用端口（WebDAV 服务器）
PORT=8080

# ================================
# OpenAI API 配置（LLM 功能）
# ================================

# OpenAI API Key
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI API Base URL（可选，用于代理）
# OPENAI_API_BASE_URL=https://api.openai.com/v1

# OpenAI 模型
OPENAI_MODEL=gpt-4

# ================================
# 数据存储配置
# ================================

# 默认笔记目录
DEFAULT_NOTE_DIR=~/Documents/ONote

# 备份目录
BACKUP_DIR=~/Documents/ONoteBackup

# 自动保存间隔（毫秒）
AUTOSAVE_INTERVAL=5000

# ================================
# WebDAV 服务器配置
# ================================

# 是否启用 WebDAV
WEBDAV_ENABLED=true

# WebDAV 端口
WEBDAV_PORT=8080

# WebDAV 用户名
WEBDAV_USERNAME=admin

# WebDAV 密码
WEBDAV_PASSWORD=changeme

# ================================
# 更新配置
# ================================

# 是否启用自动更新检查
AUTO_UPDATE_ENABLED=true

# 更新检查间隔（小时）
UPDATE_CHECK_INTERVAL=24

# ================================
# 调试配置
# ================================

# 是否启用开发者工具
DEVTOOLS_ENABLED=true

# 是否启用性能监控
PERFORMANCE_MONITORING=false

# 是否启用调试日志
DEBUG_MODE=false

# ================================
# 安全配置
# ================================

# Content Security Policy
CSP_ENABLED=true

# 是否允许远程加载资源
ALLOW_REMOTE_RESOURCES=false

# ================================
# 插件配置
# ================================

# 插件目录
PLUGIN_DIR=~/.onote/plugins

# 是否允许第三方插件
ALLOW_THIRD_PARTY_PLUGINS=true

# ================================
# 编辑器配置
# ================================

# 默认字体大小
EDITOR_FONT_SIZE=14

# 默认字体家族
EDITOR_FONT_FAMILY="Monaco, Menlo, 'Ubuntu Mono', monospace"

# 是否启用自动补全
EDITOR_AUTOCOMPLETION=true

# ================================
# 主题配置
# ================================

# 默认主题 (light, dark, auto)
THEME=auto

# ================================
# SSH 数据源配置（可选）
# ================================

# SSH 默认端口
SSH_DEFAULT_PORT=22

# SSH 连接超时（毫秒）
SSH_TIMEOUT=10000

# ================================
# Git 数据源配置（可选）
# ================================

# Git 默认分支
GIT_DEFAULT_BRANCH=main

# Git 提交用户名
GIT_USER_NAME=Your Name

# Git 提交邮箱
GIT_USER_EMAIL=your.email@example.com

# ================================
# 代理配置（可选）
# ================================

# HTTP 代理
# HTTP_PROXY=http://proxy.example.com:8080

# HTTPS 代理
# HTTPS_PROXY=http://proxy.example.com:8080

# 代理绕过列表
# NO_PROXY=localhost,127.0.0.1
